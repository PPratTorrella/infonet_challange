{% extends 'base.html.twig' %}

{% block body %}

	<div class="container mt-5">
		<h2>Edit Character: {{ character.name }}</h2>
		<hr>

		{{ form_start(form, {'attr': {'enctype':'multipart/form-data'}}) }}
		{{ form_row(form.name, {'label': 'Character Name'}) }}
		{{ form_row(form.picture, {'label': 'Upload Picture'}) }}
		{{ form_row(form.submit) }}
		{{ form_end(form) }}

		<hr>

		<form method="post" action="{{ path('character_delete', {'id': character.id}) }}" onsubmit="return confirm('Are you sure you want to delete this character?');">
			<button type="submit" class="btn btn-danger">Delete Character</button>
		</form>
	</div>

{% endblock %}
