{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-5">
		<!-- Search Form -->
		<form method="post" action="{{ path('app_home') }}">
			<div class="input-group mb-3">
				<input type="text" name="search" class="form-control" placeholder="Search characters..." value="{{ app.request.get('search', '') }}">
				<div class="input-group-append">
					<button class="btn btn-outline-secondary" type="submit">Search</button>
				</div>
			</div>
		</form>

		<!-- List of Characters -->
		<ul class="list-group mb-3">
			{% for character in characters %}
				<li class="list-group-item d-flex justify-content-between align-items-center">
					<a href="{{ path('character_edit', {'id': character.id}) }}">{{ character.name }}</a>

					<form method="post" action="{{ path('character_delete', {'id': character.id}) }}" onsubmit="return confirm('Are you sure you want to delete this character?');">
						<button type="submit" class="btn btn-danger btn-sm">Delete</button>
					</form>
				</li>
			{% else %}
				<li class="list-group-item">No characters found.</li>
			{% endfor %}
		</ul>

		<!-- Pagination, if necessary -->

	</div>
{% endblock %}
